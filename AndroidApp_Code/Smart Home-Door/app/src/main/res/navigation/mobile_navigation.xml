<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.testtest.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.example.testtest.ui.home.HomeFragment"
        android:label="@string/home_second"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_home" />

        <argument
            android:name="myArg"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_home_second_to_nav_guard"
            app:destination="@id/nav_guard" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.testtest.ui.gallery.GalleryFragment"
        android:label="방문 이력 조회"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_실시간"
        android:name="com.example.testtest.ui.slideshow.SlideshowFragment"
        android:label="등록된 사용자 방문 확인"
        tools:layout="@layout/fragment_slideshow">
        <action
            android:id="@+id/action_nav_실시간_to_nav_gallery"
            app:destination="@id/nav_gallery" />
    </fragment>
    <fragment
        android:id="@+id/nav_guard"
        android:name="com.example.testtest.ui.guard.guardFragment"
        android:label="방문자확인"
        tools:layout="@layout/fragment_guard">
        <action
            android:id="@+id/action_nav_guard_to_nav_실시간"
            app:destination="@id/nav_실시간" />
    </fragment>
</navigation>